<body>
    <div class="container">
        <h1>碎片率计算器</h1>
        <div class="form-group">
            <label for="machineNumber">机台号（数字）：</label>
            <input type="text" id="machineNumber" placeholder="请输入机台号" />
        </div>
        <div class="form-group">
            <label for="runNumber">机跑数：</label>
            <input type="number" id="runNumber" placeholder="请输入机跑数" />
        </div>
        <div class="form-group">
            <label for="qualifiedNumber">合格数：</label>
            <input type="number" id="qualifiedNumber" placeholder="请输入合格数" />
        </div>
        <div class="form-group">
            <label for="scrapNumber">剔除碎：</label>
            <input type="number" id="scrapNumber" placeholder="请输入剔除碎" />
        </div>
        <div class="form-group">
            <label for="selection">选择类型：</label>
            <select id="selection">
                <option value="双拼">双拼</option>
                <option value="单拼">单拼</option>
            </select>
        </div>
        <button onclick="calculate()">计算</button>

        <div class="summary" id="summary" style="display:none;">
            <h3>总结：</h3>
            <p id="summaryText"></p>
            <button class="copy-button" onclick="copySummary()">复制总结</button>
        </div>

        <div class="signature">
            <p>署名：您的名字</p>
        </div>
    </div>

    <script>
        function calculate() {
            const runNumber = parseFloat(document.getElementById("runNumber").value);
            const qualifiedNumber = parseFloat(document.getElementById("qualifiedNumber").value);
            const scrapNumber = parseFloat(document.getElementById("scrapNumber").value);
            const machineNumber = document.getElementById("machineNumber").value;
            const selection = document.getElementById("selection").value;

            if (isNaN(runNumber) || isNaN(qualifiedNumber)) {
                alert("机跑数和合格数必须填写有效的数字！");
                return;
            }

            let summaryText = `${machineNumber ? machineNumber : "未指定机台号"} `;

            if (qualifiedNumber > runNumber) {
                const extra = qualifiedNumber - runNumber;
                const fragmentRate = (extra / runNumber) * 100;
                summaryText += `多片${extra} 剔除碎片${scrapNumber} 碎片率${fragmentRate.toFixed(2)}% ${selection}`;
            } else if (runNumber > qualifiedNumber) {
                const missing = runNumber - qualifiedNumber;
                const fragmentRate = (missing / runNumber) * 100;
                summaryText += `少片${missing} 剔除碎片${scrapNumber} 碎片率${fragmentRate.toFixed(2)}% ${selection}`;
            } else {
                summaryText += `没有碎片。${selection}`;
            }

            document.getElementById("summaryText").textContent = summaryText;
            document.getElementById("summary").style.display = "block";
        }

        function copySummary() {
            const summaryText = document.getElementById("summaryText").textContent;
            navigator.clipboard.writeText(summaryText)
                .then(() => {
                    alert("总结已复制！");
                })
                .catch(err => {
                    console.error("复制失败:", err);
                });
        }
    </script>
</body>
